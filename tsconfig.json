{
  "compilerOptions": {
    "outDir": "./built",
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "allowJs": true,
    "baseUrl": "./",
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "preserveSymlinks": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "lib": ["esnext", "dom"],
    "types": ["@types/node"],
    "paths": {
      "@/*": ["./resources/js/"]
    }
  },
  "typeRoots": ["./node_modules/@types", "resources/js/types"],
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.d.ts",
    "resources/js/**/*.vue"
  ],

  "exclude": ["node_modules", "public"]
}